{% if template contains 'login' %}
	$('.forgot').click(function() {
		$('.password').show();
	});
{% endif %}

{% if template contains 'address' %}
	$('.add-new').click(function() {
		$('.add-new-address').toggle();
	});
	$('.edit').click(function() {
		var id = $(this).attr('data-id');
		$('#edit_address_'+id).toggle();
	});
{% endif %}
