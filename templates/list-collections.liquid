{% paginate collections by collections.size %}
	<h1>Collections</h1>
	<div class="grid products">
	{% for collection in collections %}
		<div class="col-1-4 item">
			<a href="{{ collection.url }}">
				{% if collection.image %}
					{{ collection.image.src | collection_img_url:'medium' | img_tag:collection.title }}
				{% else %}
					{{ collection.products[0].featured_image | product_img_url:'medium' | img_tag:collection.title }}
				{% endif %}
				{{ collection.title }}
			</a>
		</div> <!-- end .item -->
		{% cycle '','','','<div class="clear"></div>' %}
	{% endfor %}
	</div> <!-- end .products -->
{% endpaginate %}
