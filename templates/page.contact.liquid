<h1>{{page.title}}</h1>
<div class="rte">
	{{page.content}}
</div> <!-- end .rte -->
{% form 'contact' %}
	{% if form.posted_successfully? %}
  		Thanks for contacting us! We&rsquo;ll get back to you soon.
	{% endif %}
	{% if form.errors %}
  		{% for field in form.errors %}
    		{{ field }} - {{ form.errors.messages[field] }}
  		{% endfor %}
	{% endif %}
	<input type="text" name="contact[name]" placeholder="name" class="{% if form.errors contains 'name' %}input-error{% endif %}" value="{{ contact.fields.name }}" />
    <input type="text" name="contact[email]" placeholder="email address" class="{% if form.errors contains 'email' %}input-error{% endif %}" value="{{ contact.fields.email }}" />
    <textarea name="contact[body]" rows="20" cols="20" placeholder="message" class="{% if form.errors contains 'body' %}input-error{% endif %}">{{ contact.fields.body }}</textarea>
    <button type="submit">send</button>
{% endform %}