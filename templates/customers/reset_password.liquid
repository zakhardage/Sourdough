<h1>Reset Account Password</h1>
<p>Enter a new password for {{ email }}</p>
{% form 'reset_customer_password' %}
	{% if form.errors %}{% for field in form.errors %}<p>{{ field }}: {{ form.errors.messages[field] }}</p>{% endfor %}{% endif %}
	<label for="password">Password</label>
	<input id="password" type="password" name="customer[password]" />

	<label for="password_confirmation">Confirm password</label>
	<input id="password_confirmation" type="password" name="customer[password_confirmation]" />

	<button type="submit">Reset Password</button>
{% endform %}
